<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".HttpActivity">

    <include layout="@layout/toolbar" />

    <Button
        android:id="@+id/bConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true"
        android:text="Comprobar conexiÃ³n" />

    <Button
        android:id="@+id/bRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bConnect"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Request HTTP" />

    <Button
        android:id="@+id/bVolley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bRequest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Volley request HTTP" />

    <Button
        android:id="@+id/bOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bVolley"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Request OkHTTP" />
</RelativeLayout>